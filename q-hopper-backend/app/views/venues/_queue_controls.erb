<div class="venue-queue-button d-flex justify-content-center p-3">
  <%if empty_queue%>

      <div class="add-booking">
        <%= button_to "Accept next group", venue_add_group_path(venue),class: 'btn btn-info disabled rounded'%>
    </div>
  <%else%>
    <div class="add-booking">
      <%= button_to "Accept next group", venue_add_group_path(venue), class: 'btn btn-primary'%>
    </div>
  <%end%>
</div>

<div class= container>
  <form action="post" class="d-flex">
    <div class="mb-3">
      <label for="booking-code" class = "form-label">Enter Booking code</label>
      <input type='text' class="form-controll" id ="booking-code">
    </div>
    <button type ='submit' class= 'btn btn-primary'></button>
  </form>
</div>
