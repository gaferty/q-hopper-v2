<h1 class="text-center"> <strong> <%=@venue.name%> </strong>   </h1>
<div class="venue-queue-container bg-light rounded-5 border" >
  <div class="row w-60">
      <div class="col ">
        <%= render 'queue', groups: @bookings.where(accepted:false), title: "Queue", parameter:"Queue Size"%>


        <div class="d-flex justify-content-center p-3">

        </div>



        </div>

        <div class="col">
          <%= render 'queue', groups: @bookings.where(completed:false, accepted:true), title: "Accepted", parameter: "On Route"%>
        </div>
        <div class="col">
          <%=render 'queue', groups: @bookings.where(completed:true, accepted:true), title: 'Completed', parameter: 'Completed Bookings'%>
        </div>
  </div>

</div>
<div class="d-flex justify-content-center mt-4">

  <div class="add-booking d-flex justify-content-centre">
    <%if @bookings.where(accepted:false, completed:false, join:false).empty?%>
      <div class="add-booking">
          <%= button_to "Accept next group", venue_add_group_path(@venue),class: 'btn btn-lg btn-info disabled rounded-5'%>
      </div>
    <%else%>
      <%= button_to "Accept next group", venue_add_group_path(@venue), class: 'btn btn-lg btn-primary rounded-5 text-white'%>
    <%end%>
  </div>
</div>
