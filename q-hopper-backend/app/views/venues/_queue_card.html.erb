<div data-controller='accept-booking' data-accept-booking-booking-id-value= "<%=booking_id%>">
  <%card_types = {accepted: 'booking-success', warning: 'booking-warning', normal: "" }%>

  <div class="card mt-1 <%=card_types[card_type]%> rounded-4" data-action = "<%=card_type == :accepted ? 'click->acceptBooking#arrived': ''%>">
    <div class="card-body" data-action = "click->accept-booking#arrived">
      <div class="d-flex justify-content-between">
        <h5 class= "card-title text-start"><%= name %></h5>
        <div class="queue-position p-1">
          <p><%= group_size%></p>
          seats
        </div>
      </div>
    </div>
  </div>
  <%if card_type == :accepted || card_type == :warning%>
    <%= render 'time_left', updated_at: updated_at, booking_id: booking_id, card_type: card_type%>
  <%end%>

</div>
